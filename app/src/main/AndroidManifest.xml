<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.bukola.TicTacTo">

    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/icontictacto"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name="com.example.bukola.TicTacTo.MainActivity"
            android:configChanges="orientation"
            android:launchMode="singleInstance"
            android:screenOrientation="portrait">

        </activity>

        <activity
            android:name="com.example.bukola.TicTacTo.SplashScreen"
            android:configChanges="orientation"
            android:launchMode="singleInstance"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.example.bukola.TicTacTo.TwoDevice2P"
            android:configChanges="orientation"
            android:label="Two Player"
            android:screenOrientation="portrait" />

        <activity
            android:name="com.example.bukola.TicTacTo.one_player"
            android:configChanges="orientation"
            android:label="Select Level"
            android:screenOrientation="portrait" />

        <activity
            android:name="com.example.bukola.TicTacTo.one_player_easy"
            android:configChanges="orientation"
            android:label="One Player - Easy Mode"
            android:screenOrientation="portrait" />

        <activity
            android:name="com.example.bukola.TicTacTo.one_player_difficult"
            android:configChanges="orientation"
            android:label="One Player - Difficult Mode"
            android:screenOrientation="portrait" />

        <activity
            android:name="com.example.bukola.TicTacTo.two_player_selector"
            android:configChanges="orientation"
            android:label="Two Player Menu"
            android:screenOrientation="portrait" />

        <activity
            android:name="com.example.bukola.TicTacTo.two_player_names"
            android:configChanges="orientation"
            android:label="Enter Player Names"
            android:screenOrientation="portrait" />

        <activity
            android:name="com.example.bukola.TicTacTo.highscores2p"
            android:configChanges="orientation"
            android:label="High Score"
            android:screenOrientation="portrait" />

        <activity android:name="com.example.bukola.TicTacTo.BluetoothActivity" />
        <activity android:name="com.example.bukola.TicTacTo.SingleDevice2P" />

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <activity android:name="com.example.bukola.TicTacTo.TwoDevice2P_names"></activity>
    </application>

</manifest>
